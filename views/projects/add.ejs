<%- include('../partials/header') %>
   <h1>Create New Project</h1> 
   <form id="new-project-form" action="/" method="POST">
    <label>Project Name:</label>
        <input type="text" name="name" required>
        <br></br>
        <label>Method:</label>
        <select name="type" required>
            <option value=""></option>
            <option value="knit">Knit</option>
            <option value="crochet">Crochet</option>
            <option value="spin">Spin</option>
            <option value="weave">Weave</option>
        </select>
        <br></br>
        <label>Source:</label>
        <input type="text" name="sourceLink" required>
        <br></br>
        <label>Status:</label>
        <select name="status" required>
            <option value=""></option>
            <option value="pending">Thinking about it...</option>
            <option value="started">Started</option>
            <option value="finished">Finished</option>
            <option value="on-hold">On Hold</option>
        </select>
        <br></br>
        <input class="hidden-input" type="text" name="user" value="<%= user._id %>">
        <input class="button" type="submit" value="add to library">
   </form>

   <%- include('../partials/footer') %>